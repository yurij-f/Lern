{
   "tasks": [
      {
         "type": "cppbuild",
         "label": "build-linux",
         "command": "/usr/bin/gcc",
         "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${workspaceFolder}/bin/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": ["$gcc"],
         "linux": true,
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "type": "cppbuild",
         "label": "build-windows",
         "command": "C:\\MinGW\\bin\\gcc.exe",
         "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": ["$gcc"],
         "windows": true,
         "group": {
            "kind": "build",
            "isDefault": true
         }
      }
   ],
   "version": "2.0.0"
}
